@{
    ViewData["Title"] = "Home Page";
}

@*subscriber button*@
<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    
    <button type="button" id="firstButton" class="btn btn-primary center" data-toggle="modal" data-target="#exampleModal">
        Subscribe Me!!
    </button>

    <div id="statusmessage">
    </div>
</div>

@*pop-up modal display*@
<div class="modal" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="Label" aria-hidden="true">
    <div class="modal-dialog row">
        <div class="modal-content">
            <div class="modal-header">
                
                <div>
                    <label for="userName">Enter your user name: </label>
                    <input type="text" id="userName" placeholder="Name">
                </div>
                <div>
                    <label for="emailAddress">Email address</label>
                    <input type="email" id="EmailAddress" aria-describedby="emailHelp" placeholder="Enter email">
                    @*<small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>*@
                </div>
                @*<div>
                    <input type="checkbox" class="form-check-input" id="subscribeNot">
                    <label class="form-check-label" for="subscribeNot">Do Not Subscribe me</label>
                </div>*@
            </div>
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-primary" id="saveSubscription"> Submit </button>
            <div id="noemail">

            </div>
        </div>
    </div>
</div>
